{
  "compilerOptions": {
    /* Basic Options */

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./lib",
    "declaration": false,
    "noImplicitAny": false,
    "noLib": false
  },

  "files": [
    "components/index.d.ts"
  ],

  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]

}
