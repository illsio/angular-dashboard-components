{
  "compilerOptions": {
    /* Basic Options */

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",

    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": false,
    "outDir": "./dist",
    "declaration": true,
    "noImplicitAny": false,
//    "noLib": false,

    "stripInternal": true,
    "inlineSources": false,
    "module": "es2015",
//    "moduleResolution": "node"

    "strict": true,
    "lib": ["es2015", "dom"]
  },

  "files": [
    "components/charts/index.d.ts",
    "components/utils/chart.utils.ts"
  ],

  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]

}
